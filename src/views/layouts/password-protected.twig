<!DOCTYPE html>
<html
	{% if lang == '/en' %}
		lang="en" xml:lang="en"
	{% else %}
		lang="fr" xml:lang="fr"
	{% endif %}>
<head>
	{% include 'html-head.twig' %}
</head>
<header class="header_pass">
    <div class="header_item"><a href="/">Visit Geniusloci-experience.com</a></div>
    <div class="header_item"><a href="mailto:contact@geniusloci-experience.com" class="item" target="_blank">Contact</a></div>
</header>
<body class="body" data-theme="light">
	<div class="root">
        {% block content %}

        <main id="content">
            <section class="page pass" data-namespace="pass" dir="ltr" data-part="pass">
                <div class="logo">{% include 'logo_genius.twig'%}</div>
                <h3 class="pass_base">2021 edition hightlights</h3>
                <div class="numero">{{ password_form }}</div>
            </section>
        </main>

        {% endblock %}
        <script>
			window.__WP_VARS = {
				THEME_URI: '{{site.theme.uri}}',
				BASE_URL: '{{site.url}}',
				RELATIVE_BASE_URL: '{{site.url|relative}}',
			}
		</script>
		<script src="{{site.theme.link}}/bundle.js?key={{random(50, 1000)}}" defer></script>

	</div>
	{{ wp_footer }}
</body>
</html>
